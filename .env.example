# Google Gemini AI API Key
GEMINI_API_KEY=your_gemini_api_key_here

# MongoDB Atlas Connection String
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/studymaster?retryWrites=true&w=majority&appName=Studymaster

# JWT Authentication Secrets (generate secure random strings)
NEXTAUTH_SECRET=your-nextauth-secret-here-minimum-32-characters
JWT_SECRET=your-jwt-secret-here-minimum-32-characters
JWT_EXPIRATION=7d

# Application URL (must match the port in package.json dev script)
NEXTAUTH_URL=http://localhost:9003

# Node Environment
NODE_ENV=development